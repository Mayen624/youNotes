<div class="container mt-3">
    <div class="row justify-content-center" style="margin-top: 1rem;">
        <div class="col-ms-8 col-md-6 col-lg-4 rounded p-4 shadow" style="background-color: #F7F7F7;">
            <div class="row justify-content-center mb-4">
                <img class="img-fluid rounded-circle" src="/public/images/notepad.png" alt="logo" style="width: 10rem;">
            </div>
            <form action="/signup" method="POST">
                <div class="mb-4">
                    <div class="input-group flex-nowrap my-2">
                        <span class="input-group-text" id="addon-wrapping"><i class="bi bi-person-fill"></i></span>
                        <input name="User" type="text" class="form-control" placeholder="Usuario" id="user"
                            maxlength="10" value="{{User}}">
                    </div>
                     <div class="input-group flex-nowrap my-2">
                        <span class="input-group-text" id="addon-wrapping"><i class="bi bi-card-checklist"></i></span>
                        <input name="names" type="text" class="form-control" placeholder="Nombres" id="names"
                            maxlength="15" value="{{names}}">
                    </div>
                    <div class="input-group flex-nowrap my-2">
                        <span class="input-group-text" id="addon-wrapping"><i class="bi bi-envelope"></i></i></span>
                        <input name="Email" type="email" class="form-control" placeholder="Correo" id="email"
                            value="{{Email}}">
                    </div>
                    <div class="input-group flex-nowrap my-2">
                        <span class="input-group-text" id="addon-wrapping"><i class="bi bi-telephone"></i></span>
                        <input name="phone" type="tel" class="form-control" placeholder="Telefono" id="phone"
                            value="{{phone}}">
                    </div>
                    <div class="input-group flex-nowrap my-2">
                        <span class="input-group-text" id="addon-wrapping"><i class="bi bi-lock-fill"></i></span>
                        <input name="Password" type="password" class="form-control" placeholder="Contraseña"
                            id="password">
                        <button id="show-pass" type="button" class="input-group-text"><i
                                class="bi bi-eye-fill"></i></button>
                    </div>
                    <div class="input-group flex-nowrap my-2">
                        <span class="input-group-text" id="addon-wrapping"><i class="bi bi-unlock-fill"></i></i></span>
                        <input name="confirmPass" type="password" class="form-control"
                            placeholder="Confirmar contraseña" id="confirmPass">
                    </div>
                </div>
                <div class="mb-4">
                    <button type="submit" class="btn btn-dark w-100">Registrarme</button>
                </div>
                <div class="text-center mt-3">
                    <a href="/auth"> Inicia sesion aqui</a>
                </div>
            </form>
        </div>
    </div>
</div>
<br>