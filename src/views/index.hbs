<div class="container">
    <div class="row justify-content-center" style="margin-top: 5rem;">
        <div class="col-ms-8 col-md-6 col-lg-4 rounded p-4 shadow" style="background-color: #F7F7F7;">
                <div class="row justify-content-center mb-4">
                    <img class="img-fluid rounded-circle" src="/public/images/notepad.png" alt="logo" style="width: 10rem;">
                </div>
            <form action="/" method="POST">
                <div class="mb-4">
                    <div class="input-group flex-nowrap" style="margin: 10px;">
                        <span class="input-group-text" id="addon-wrapping"><i class="bi bi-person-fill"></i></span>
                        <input type="text" name="User" class="form-control" placeholder="Usuario" aria-label="Username" maxlength="15" aria-describedby="addon-wrapping" value="{{User}}">
                    </div>
                    <div class="input-group flex-nowrap" style="margin: 10px;">
                        <span class="input-group-text" id="addon-wrapping"><i class="bi bi-lock-fill"></i></i></span>
                        <input type="password" id="password" name="Password" class="form-control" placeholder="Contraseña" aria-label="Password" aria-describedby="addon-wrapping">
                        <button id="show-pass" type="button" class="input-group-text"><i class="bi bi-eye-fill"></i></button>
                    </div>
                </div>
                <div class="mb-4">
                    <button type="submit" class="btn btn-dark w-100">Ingresar</button>

                    <div class="text-center mt-3">
                       <a href="#">¿Has olvidado tus credenciales?</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>