<div class="login">
    <div class="rounded p-4 shadow" id="login-content">
            <div class="row justify-content-center mb-4">
                <img class="img-fluid rounded-circle" src="/public/images/notepad.png" alt="logo" style="width: 10rem;">
            </div>
        <form action="/auth" method="POST">
                <div class="mb-4">
                    <div class="input-group flex-nowrap" style="margin: 10px;">
                        <span class="input-group-text" id="addon-wrapping"><i class="bi bi-person-fill"></i></span>
                        <input type="email" name="email" class="form-control" placeholder="Correo" aria-label="Email" value="{{User}}">
                    </div>
                    <div class="input-group flex-nowrap" style="margin: 10px;">
                        <span class="input-group-text" id="addon-wrapping"><i class="bi bi-lock-fill"></i></i></span>
                        <input type="password" name="password" id="password" class="form-control" placeholder="Contraseña">
                        <button id="show-pass" type="button" class="input-group-text"><i class="bi bi-eye-fill"></i></button>
                    </div>
                </div>
            <div class="mb-4">
                <button type="submit" class="btn btn-dark w-100">Ingresar <i class="bi bi-box-arrow-in-right"></i></button>

                <div class="text-center mt-3">
                    <a href="#">¿Has olvidado tus credenciales?</a>
                </div>
            </div>
        </form>
    </div>
</div>