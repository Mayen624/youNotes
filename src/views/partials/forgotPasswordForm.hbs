{{#if success_msg}}
<div id="alerts" style="margin: 0px 20px 0px 20px;">
  <div class="alert alert-success d-flex align-items-center alert-dismissible fade show mt-3" role="alert">
    <i class="bi bi-check-circle-fill bi flex-shrink-0 me-2"></i>
    <div>
      {{success_msg}}
    </div>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
</div>
{{/if}}

{{#if error_msg}}
<div id="alerts" style="margin: 0px 20px 0px 20px;">
  <div class="alert alert-danger  d-flex align-items-center alert-dismissible fade show mt-3" role="alert">
    <i class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2"></i>
    <div>
      {{error_msg}}
    </div>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
</div>
{{/if}}

<div class="container d-flex flex-column">
    <div id="sec-div" class="row align-items-center justify-content-center g-0">
        <div class="col-12 col-md-8 col-lg-4 border-top border-3 border-primary">
            <div class="card shadow-sm">
                <div id="body" class="card-body">
                    <div class="mb-4">
                        <h5>Olvido su contraseña?</h5>
                        <p class="mb-2">Ingrese su correo electronico para restablecer su contraseña
                        </p>
                    </div>
                    <form action="/auth/new_password" method="POST">
                        <div class="mb-3">
                            <label for="email" class="form-label">Correo:</label>
                            <input type="email" id="email" class="form-control" name="email"
                                placeholder="example@gmail.com" required="">
                        </div>
                        <div class="mb-3 d-grid">
                            <button type="submit" class="btn btn-primary">
                                Enviar
                            </button>
                        </div>
                        <span> Aún to tiene una cuenta? <a href="/signup">Registrate</a></span>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>