<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="/public/css/profile.css">
    <link rel="stylesheet" href="/bi/font/bootstrap-icons.css">
    <title>Profile - {{userName}}</title>
</head>

<body>
    {{>mainNavBar}}

    <section class="vh-100" style="background-color: #9de2ff;">

        {{#if success_msg}}
        <div id="alerts" class="container">
            <div class="alert alert-success d-flex align-items-center alert-dismissible fade show mt-3" role="alert">
                <i class="bi bi-check-circle-fill bi flex-shrink-0 me-2"></i>
                <div>
                    {{success_msg}}
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
        {{/if}}

        {{#if error_msg}}
        <div id="alerts" class="container">
            <div class="alert alert-danger d-flex align-items-center alert-dismissible fade show mt-3" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <div>
                    {{error_msg}}
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
        </div>
        {{/if}}

        <div class="container h-50">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-md-9 col-lg-7 col-xl-5">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-4">
                            <div class="d-flex text-black">
                                <div class="flex-shrink-0">
                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-profiles/avatar-1.webp"
                                        alt="Generic placeholder image" class="img-fluid"
                                        style="width: 180px; border-radius: 10px;">
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h5 class="mb-1">{{userInfo.names}}</h5>
                                    <p class="mb-2 pb-1" style="color: #2b2a2a;">{{userInfo.work}}</p>
                                    <div class="d-flex justify-content-start rounded-3 p-2 mb-2"
                                        style="background-color: #efefef;">
                                        <div>
                                            <p class="small text-muted mb-1">Sexo</p>
                                            <p class="mb-0">{{userInfo.sex}}</p>
                                        </div>
                                        <div class="px-3">
                                            <p class="small text-muted mb-1">Edad</p>
                                            <p class="mb-0">{{userInfo.age}}</p>
                                        </div>
                                        <div>
                                            <p class="small text-muted mb-1">Se unio</p>
                                            <p class="mb-0">{{dateJoin}}</p>
                                        </div>
                                    </div>
                                    <div class="d-flex pt-1">
                                        <button type="button" class="btn btn-outline-secondary me-1 flex-grow-1"
                                            data-bs-toggle="modal" data-bs-target="#addKey">Secret key
                                        </button>
                                        <button type="button" class="btn btn-dark flex-grow-1" data-bs-toggle="modal"
                                            data-bs-target="#editProfile">Edit profile</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {{>addSecretKeyForm}}
    {{>editProfileForm}}

    {{>footer}}

    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/public/scripts/profile.js"></script>
</body>

</html>