{{#if errors}}
<div id="alerts" class="container">
    <div class="alert alert-danger d-flex align-items-center alert-dismissible fade show mt-3" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <div>
           {{errors}}
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
</div>
{{/if}}

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h4>Editando: {{noteData.titulo}}</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit" method="POST">
                <div class="mb-3">
                    <label class="form-label">Titulo:</i></label>
                    <input type="hidden" name="id" class="form-control" value="{{noteData._id}}" readonly>
                    <input type="text" name="tittle" value="{{noteData.titulo}}" class="form-control">
                </div>
                <div class="mb-3">
                    <label class="form-label">Categoria:</i></label>
                    <select class="form-select" name="category">
                        <option value="" selected></option>
                        <option value="Recordatorio">Recordatorio</option>
                        <option value="Negocios">Negocios</option>
                        <option value="Credenciales">Credenciales</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Contenido:</i></label>
                    <textarea name="content" class="form-control">{{noteData.contenido}}</textarea>
                    <input type="hidden" name="updatedAt" class="form-control" value="{{noteData.updatedAt}}" readonly>
                </div>
                <div class="modal-footer">
                    <a class="btn btn-danger m-2" href="/notes">Regresar</a>
                    <button type="submit" class="btn btn-success m-2">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>
