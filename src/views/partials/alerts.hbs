{{#if warning_msg}}
<div id="alerts" class="container">
    <div class="alert alert-warning d-flex align-items-center alert-dismissible fade show mt-3" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <div>
           {{warning_msg}}
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
</div>
{{/if}}

{{#if error}}
<div id="alerts" class="container">
    <div class="alert alert-danger d-flex align-items-center alert-dismissible fade show mt-3" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <div>
           {{error}}
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
</div>
{{/if}}

{{#if errors}}
<div id="alerts" class="container">
    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
        <h4 class="alert-heading"> <i class="bi bi-exclamation-triangle-fill"></i> Porfavor revisar los siguientes errores!</h4>
        <hr>
        {{#each errors}}
            <p class="mb-0"> -> {{message}}</p>
        {{/each}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
</div>
{{/if}}

{{#if authErrors}}
<div id="alerts" class="container">
    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
        {{#each authErrors}}
            <p class="mb-0">  <i class="bi bi-exclamation-triangle-fill"></i> {{message}}</p>
        {{/each}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
</div>
{{/if}}

{{#if success_msg}}
<div id="alerts" style="margin: 0px 20px 0px 20px;">
  <div class="alert alert-success d-flex align-items-center alert-dismissible fade show mt-3" role="alert">
    <i class="bi bi-check-circle-fill bi flex-shrink-0 me-2"></i>
    <div>
      {{success_msg}}
    </div>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
</div>
{{/if}}

{{#if error_msg}}
<div id="alerts" style="margin: 0px 20px 0px 20px;">
  <div class="alert alert-danger  d-flex align-items-center alert-dismissible fade show mt-3" role="alert">
    <i class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2"></i>
    <div>
      {{error_msg}}
    </div>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
</div>
{{/if}}
